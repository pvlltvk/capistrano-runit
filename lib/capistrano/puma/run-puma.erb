#!/bin/sh

APP_USER=rubyworker
APP_DIR=<%= current_path %>

RUBY_ENV=`cat $APP_DIR/.ruby-version`@`cat $APP_DIR/.ruby-gemset`

if echo "$RUBY_ENV" | grep -v ruby; then
    . /home/$APP_USER/.rvm/environments/ruby-$RUBY_ENV
else
    . /home/$APP_USER/.rvm/environments/$RUBY_ENV
fi

cd <%= current_path %>
<%= SSHKit.config.default_env.map { |k, v| "#{k.upcase}=\"#{v}\"" }.join(" ") %> exec <%= SSHKit.config.command_map[:puma] %> -C #{deploy_to}/runit/puma.rb
